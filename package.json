{
  "name": "development_readiness",
  "version": "2.0.0",
  "description": "Web development readiness monitor - audits websites for performance, security, and errors",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "audit": "node index.js",
    "audit:single": "node index.js --site",
    "audit:quick": "node index.js --max-pages 3",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "lighthouse",
    "performance",
    "audit",
    "web",
    "crawler",
    "seo",
    "accessibility",
    "security"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "chrome-launcher": "^1.1.1",
    "fs-extra": "^11.2.0",
    "lighthouse": "^12.1.0",
    "node-cron": "^3.0.3",
    "playwright": "^1.44.1",
    "simple-wappalyzer": "^1.1.87",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
